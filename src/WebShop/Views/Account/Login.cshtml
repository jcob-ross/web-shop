@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@model WebShop.Models.Account.LoginViewModel
@inject SignInManager<ShopUser> SignInManager

@section head
{
  <environment names="Development">
    <base href="/">
    <link rel="icon" type="image/x-icon" href="/spa/img/favicon.ico">
    <link href="/spa/css/app.css" rel="stylesheet">
  </environment>

  <environment names="Staging,Production">
    <base href="/">
    <link rel="icon" type="image/x-icon" href="/spa/img/favicon.ico">
    <link href="/spa/css/app.css" rel="stylesheet">
  </environment>
}

@{
  ViewData["Title"] = "Log in";
}
<style>
  body {
    background-color: #eee;
  }
</style>

<div class="login-form">
  <form class="form-signin" asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
    <h2 class="form-signin-heading">@ViewData["Title"]</h2>

    <input class="form-control" asp-for="UserName" type="text" placeholder="User name">
    <span asp-validation-for="UserName" class="text-danger"></span>
    
    <input class="form-control" asp-for="Password" type="password" placeholder="Password">
    <span asp-validation-for="Password" class="text-danger"></span>

    <br/>
    <div class="checkbox">
      <label>
        <input type="checkbox">@Html.DisplayNameFor(m => m.RememberMe)
      </label>    
    </div>

    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Log in" />
  </form>

  <span asp-validation-for="UserName"></span>
  <br />
  <span asp-validation-for="Password"></span>
  <br />

  <div class="row">
    <div class="col-xs-2 col-xs-offset-5">
      <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register</a>
    </div>
  </div>
</div>

@section scripts
{
  <script src="https://code.jquery.com/jquery-3.1.0.min.js" integrity="sha256-cCueBR6CsyA4/9szpPfrX3s49M9vUU5BgtiJj06wt/s=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
  <script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>
}
